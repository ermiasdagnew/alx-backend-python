{
  "info": {
    "_postman_id": "c79a89af-9d8b-4b67-bd60-222f11e9a2bb",
    "name": "Messaging App API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login (Get JWT Token)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/api/token/",
          "protocol": "http",
          "host": [ "127", "0", "0", "1" ],
          "port": "8000",
          "path": [ "api", "token" ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"testuser\",\"password\":\"password123\"}"
        }
      }
    },
    {
      "name": "Unauthorized - Fetch Conversations",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://127.0.0.1:8000/api/conversations/",
          "protocol": "http",
          "host": [ "127", "0", "0", "1" ],
          "port": "8000",
          "path": [ "api", "conversations" ]
        }
      }
    },
    {
      "name": "Create Conversation",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/api/conversations/",
          "protocol": "http",
          "host": [ "127", "0", "0", "1" ],
          "port": "8000",
          "path": [ "api", "conversations" ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"participants\": [1,2]}"
        }
      }
    },
    {
      "name": "Send Message",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/api/conversations/1/messages/",
          "protocol": "http",
          "host": [ "127", "0", "0", "1" ],
          "port": "8000",
          "path": [ "api", "conversations", "1", "messages" ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"message\": \"Hello from Postman!\"}"
        }
      }
    },
    {
      "name": "Fetch All Conversations",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/api/conversations/",
          "protocol": "http",
          "host": [ "127", "0", "0", "1" ],
          "port": "8000",
          "path": [ "api", "conversations" ]
        }
      }
    },
    {
      "name": "Fetch Single Conversation",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/api/conversations/1/",
          "protocol": "http",
          "host": [ "127", "0", "0", "1" ],
          "port": "8000",
          "path": [ "api", "conversations", "1" ]
        }
      }
    }
  ]
}
